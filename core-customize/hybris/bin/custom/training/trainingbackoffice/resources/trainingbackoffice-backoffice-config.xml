<config xmlns="http://www.hybris.com/cockpit/config"
	xmlns:na="http://www.hybris.com/cockpitng/config/notifications">


	<context merge-by="module" component="editorareaactions" type="Consignment">
		<y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris">
			<y:group qualifier="common">
				<y:label>actiongroup.common</y:label>				
				<y:action action-id="org.training.backoffice.actions.confirmpickupaction" property="currentObject"/>				
			</y:group>
		</y:actions>
    </context>


	<context merge-by="principal" principal="test1" component="listviewactions">
		<y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris" >
			<y:group qualifier="export">
				<y:label>actiongroup.common</y:label>
				<y:action action-id="com.hybris.cockpitng.listview.action.export.csv" property="exportColumnsAndData" merge-mode="remove"/>
				<y:action action-id="com.hybris.backoffice.widgets.actions.excel.export" property="pageable.typeCode" merge-mode="remove"/>
				<y:action action-id="com.hybris.backoffice.widgets.actions.excel.exporttemplate" property="pageable.typeCode" merge-mode="remove"/>
				<y:action action-id="com.hybris.cockpitng.listview.action.export.csv" property="exportColumnsAndData" merge-mode="remove" />
				<y:extended-action action-id="com.hybris.backoffice.widgets.actions.excel.export" merge-mode="remove"/>
			</y:group>
		</y:actions>
	</context>

	<!-- Notification Area-->
	<context component="notification-area">
	    <na:notification-area>	        
	        <na:notifications eventType="trainingbackoffice.confirmpickup.event" level="SUCCESS">
	            <na:message>hmc.action.confirmpickup.success</na:message>
	        </na:notifications>
	   </na:notification-area>
	</context>

</config>
